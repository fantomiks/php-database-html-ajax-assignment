<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">

    <rule ref="PSR12"/>

    <file>app</file>
    <file>public</file>

    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <arg value="p"/>

    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>public/index.php</exclude-pattern>
    </rule>

</ruleset>
